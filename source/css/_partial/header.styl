body
  >header
    width 100%
    height 4em
    background color-molv
    color color-font-nav 
    @media tablet
      padding 0em 0 0.5em
    >div
      width 95%
      height 4em
      margin 0 auto
      transition color .5s
      position relative
      background color-molv
      @media tablet
        width 100%
    a
      display block
      color color-white

#textlogo
  float left
  width 25%
  margin-left 135px
  h1.site-name
    width 86%
    if ShowCustomFont
      font-family font-custom-family
      font-size font-size+100
      line-height line-height
      font-smoothing()
      @media mini
        font-size font-size+140
      @media tablet
        font-size font-size+180
    else
      font-family font-default
      font-size font-size+60
      line-height line-height+0.4
      font-weight normal
      @media mini
        font-size font-size+90
      @media tablet
        font-size font-size+120
  h2.blog-motto
    font-size 0.7em
    font-weight normal
    color #45556D
    @media mini
      font-size font-size
    @media tablet
      font-size font-size+10

.navbar
  position absolute
  width 2em
  right 0em
  bottom 0em
  padding 0.5em
  @media tablet
    display none

.navbutton::before
  font-family font-icon-family
  font-smoothing()
  content "\f0c9"

.navmobile::before
  padding-left 1em

ul.am-dropdown-content>li>a
  min-width 160px
header nav
  float left    
  width 100%
  @media phone
    width 50%
  @media tablet
    float right
    width auto
    margin-top 1em
    max-height none
  font-size font-size+12.5
  padding-top 0.5em
  max-height 0.01em
  transition max-height 1s ease-out
  ul
    @media tablet
      float right
  ul li
    @media tablet
      float left
  ul li a
    padding 0.2em 0 0.2em 1em
    @media tablet
      padding 0.2em 1.5em
    &:hover
      background saturate(darken(color-blue-theme, 25%), 10%)
      color color-font-nav

.shownav
  max-height 40em

.search
  padding: 5px 5px 0px 5px;
  input
    line-height line-height+0.2
    border 2px solid #ccc
    color #ccc
    background transparent
    border-radius 25px
    width 13em
    padding-left 0.5em
    @media tablet
      width 13em
      height 1.6em
      transition .5s width 
  .inputsty
      height 2.1em	
  label
    display none
