/*! index layout */
#container
  width 80%
  min-height 100%
  margin 0 auto
  overflow hidden
  @media mini
    width 96%
  @media tablet
    width 80%
  @media desktop
    width 82%
    
#main
  margin 1em 0 0
  line-height line-height+0.3
  @media tablet
    margin 1em 0 0
    width 72%
    float left
    transition margin 0.5s ease-out
  .post
    background color-section
    margin-bottom 0.125em
    padding 1.8em 1.8em 0.1em
    .entrytitle
      padding 0em 0em 0em 1.4em
      background #F7F7F7
      border-left 0.5em solid color-gray
      transition border-left .45s
      &:hover
         border-left 0.5em solid color-post-hover-theme
      a
        display block
        font-size 1.3em
        @media mini
          padding 0.1em
    .description
      margin-top 15px
      text-indent 2em
    .bottominfo
      height 40px
      overflow hidden
      margin-top 5px
      .readmore
        margin-right 10px 
        background color-gray
        float right
	.btn-sty
	  background color-blue
 	  width 80px
          display block
          font-size 0.8em
	  padding 5px 5px 5px 5px
	.time
	  color color-font
          display block
          margin 0.5em 0
    h1
      color color-blue
      line-height line-height-0.3
    p
      color color-font
.moveMain
  margin-left 10% !important

#page-nav
  background color-section
  text-align center
  overflow hidden
  a, span
    display inline-block
    padding 0.5em 1em
  a
    color color-blue
    &:hover
      background color-gray
      color color-theme
  .prev
    float left
    border-left 0.5em solid color-gray
    transition border-left .5s
    &:hover
      border-left 0.5em solid color-theme
  .next
    float right
  .page-number
    display none
    @media mini
      display inline-block
  .current
    color darken(color-gray,10%)
    font-weight bold
  .space
    color color-blue

/*! page layout */
.page
  @media tablet
    margin-left 10% !important

/*! archive layout */
.category-icon:before,.tag-icon:before,.archive-icon:before
  font-family font-icon-family
  font-smoothing()
  color color-gray
  font-size font-size
  padding-right 0.3em

.category-icon:before
  content "\f07b"

.tag-icon:before
  content "\f02c"
  
.archive-icon:before
  content "\f187"

.archive-title
  margin 1em 0
  width 97%
  padding 2em 0 2em 3%
  @media tablet
    width 90%
    padding-right 10%
    padding-left 10%
  background color-section
  .archiveul
    padding 10px 10px 10px 10px
  h2
    width 90%
    color color-blue
    font-size font-size+20
  a
    color color-blue
    transition color .5s
    &:hover
      color color-theme
      transition color .5s
.current
  color color-theme !important

.linkurl
    background-position center right
    background-repeat no-repeat
    background-image url(../img/linkurl.png)
    background-size 16px 16px
    padding-right  20px;

.archive-part
  @media mini
     min-height 200px
  @media tablet
    width 78% !important
    float right
    margin-left 2% !important
  section.post
    width 100%
    @media mini
      float left
      width 50%
    @media tablet
      width 33.333%
    h1
        color color-blue
        height 50px
        font-size 1.2em
                       
.archive-nav
  @media mini
    width 100%
    float left
    margin-top 1em

/*! tags&categories layout */
.all-list-box
  min-height 400px
