<%
page.tags = ' ';
%>
<div class="archive-title" >
        <h2 class="category-icon"><%= __('categories') %></h2>
        <div class="panel-group" id="accordion">
        <% site.tags.sort('name').each(function(item){ %>
        <a data-src="<%- config.root %><%- item.path %>" href="#<%= item.name %>" title="<%= item.name %>"><%= item.name %><sup><%= item.posts.length %></sup></a>
        <% }); %>

        <% site.tags.sort('name').each(function(item){ %>
           <div class="panel panel-default">
                         <div class="panel-heading">
                         <h4 class="panel-title" data-target="#modal-<%= item.name %>">
                                <a data-toggle="collapse" data-target="<%= item.name %>" data-parent="#accordion" class="collapsed">
                                        #<%= item.name %>
                                </a>
                         </h4>
                        </div>
           <ul id="<%= item.name %>" class="collapse in archiveul">
           <% site.posts.sort('date', -1).forEach(function(it){ %>
                   <% if (it.tags._index.indexOf(item._id) > -1){ %>
                         <li class="listing-item"><a href="<%= config.root %><%= it.path %>" class="linkurl" <% if (it.description) { %> title="<%= it.description %>" <% } %>><%= it.title %></a></li>
                  <% } %>
           <% }); %>
           </ul>
        </div>
        <% }); %>
        </ul>
    </div>
</div>

