<!DOCTYPE HTML>
<html <% if (config.language) { %>lang="<%= config.language %>"<% } %>>
<head>
  <meta charset="UTF-8">
  <%
  var title = page.title;

  if (is_archive()){
    title = 'Archives';

    if (is_month()){
      title += ': ' + page.year + '/' + page.month;

    }
  } else if (is_category()){
    title = 'Category: ' + page.category;
  } else if (is_tag()){
    title = 'Tag: ' + page.tag;
  }
  %>
    <title><% if (title){ %><%= title %> | <% } %><%= config.title %></title>
    <meta name="viewport" content="width=device-width, initial-scale=1,user-scalable=no">
    <% if (config.author){ %>
    <meta name="author" content="<%= config.author %>"><% } %>
    <% if (page.description){ %>
    <meta name="description" itemprop="description" content="<%= page.description %>">
    <% } else if (config.description&&(!is_post())){ %>
    <meta name="description" content="<%= config.description %>">
    <% } else if (page.excerpt){ %>
    <meta name="description" content="<%= strip_html(page.excerpt).replace(/^\s*/, '').replace(/\s*$/, '') %>">
    <% } else if (page.content){ %>
    <meta name="description" content="<%= strip_html(page.content).replace(/^\s*/, '').replace(/\s*$/, '').substring(0, 150) %>">
    <% } %>
    <% if (page.keywords){ %><meta name="keywords" content="<%= page.keywords %>"><% } %>
    <% if (theme.author.twitter){ %>
    <meta name="twitter:card" content="summary" />
    <meta name="twitter:site" content="<%= theme.author.twitter %>" />
    <meta name="twitter:title" content="<% if (title){ %><%= title %> | <% } %><%= config.title %>" />
      <% if (page.description){ %>
        <meta name="twitter:description" content="<%= page.description %>" />
      <% } %>
    <% } %>
  
  <link rel="stylesheet" href="<%- config.root %>css/lrtk.css" type="text/css">
  <link rel="stylesheet" href="<%- config.root %>css/font-awesome.min.css" type="text/css">
  <link rel="stylesheet" href="<%- config.root %>css/amazeui.min.css" type="text/css">
  <link rel="stylesheet" href="<%- config.root %>css/nprogress.css" type="text/css">
  <link rel="stylesheet" href="<%- config.root %>css/zoom.css" type="text/css">


  <script src="<%- config.root %>js/jquery-2.0.3.min.js"></script> 
  <script src="<%- config.root %>js/scrolltop.js"></script> 
  <script src="<%- config.root %>js/nprogress.js"></script>  
  <script src="<%- config.root %>js/amazeui.min.js"></script>  
  <link rel="canonical" href="http://amazeui.org/javascript/scrollspynav?_ver=2.x">

  <% if (theme.rss){ %>
    <link rel="alternative" href="<%- theme.rss %>" title="<%= config.title %>" type="application/atom+xml">
    <% } %>
    <% if (theme.favicon){ %>
    <link rel="icon" href="<%- config.root %><%- theme.favicon %>">
    <% } %> 
    <%- css('css/style') %> 
</head>
